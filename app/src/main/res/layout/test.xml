<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_launcher_background"
    android:visibility="visible">

    <com.mancj.materialsearchbar.MaterialSearchBar
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="8dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchBar2"
        app:layout_constraintVertical_bias="1.0"
        app:mt_navIconEnabled="false"
        app:mt_placeholder="Hello!"
        app:mt_placeholderColor="@color/colorAccent" />

    <com.mancj.materialsearchbar.MaterialSearchBar
        android:id="@+id/searchBar2"
        style="@style/MaterialSearchBarLight"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.005"
        app:mt_backIconTint="#3a3a3a"
        app:mt_clearIconTint="#3a3a3a"
        app:mt_dividerColor="#1F000000"
        app:mt_highlightedTextColor="#8000A1FF"
        app:mt_hintColor="#42000000"
        app:mt_menuIconTint="#3A3A3A"
        app:mt_navIconEnabled="true"
        app:mt_navIconTint="#3A3A3A"
        app:mt_placeholder="Hello!"
        app:mt_placeholderColor="@color/colorAccent"
        app:mt_searchBarColor="#FFFFFF"
        app:mt_searchIconTint="#3A3A3A"
        app:mt_textColor="#DE000000"
        app:mt_textCursorTint="#8000A1FF" />
</androidx.constraintlayout.widget.ConstraintLayout>